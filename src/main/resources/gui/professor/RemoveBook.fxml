   <ComboBox fx:id="coursesCombo" layoutX="200.0" layoutY="184.0" onAction="#loadBooksList" prefHeight="65.0" prefWidth="880.0" promptText="Seleziona un corso..." styleClass="legacy-combo-box" stylesheets="@../../style/componenti/comboBox.css" />
